<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="12dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="案号："/>
        <TextView
            android:id="@+id/tv_ah"
            android:textColor="@color/txt_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12445666"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行法院："/>
        <TextView
            android:id="@+id/tv_cxfy"
            android:textColor="@color/txt_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12445666"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="履行情况："/>
        <TextView
            android:id="@+id/tv_lxqk"
            android:textColor="@color/txt_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12445666"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立案日期："/>
        <TextView
            android:id="@+id/tv_larq"
            android:textColor="@color/txt_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12445666"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布日期："/>
        <TextView
            android:id="@+id/tv_fbrq"
            android:textColor="@color/txt_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12445666"/>
    </LinearLayout>

    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_normal"/>
</LinearLayout>