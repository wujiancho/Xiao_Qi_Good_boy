<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.integral_query.BankinformationconfirmationActivity"
    android:orientation="vertical"
    >
    <include layout="@layout/tooblar_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_2"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款账户"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_15"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#fff0f0f0"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款行"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_15"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#fff0f0f0"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款账号"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_15"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#fff0f0f0"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现积分"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_15"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#fff0f0f0"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现金额"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_2"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="金琦"
                android:textColor="#ff000000"
                android:textSize="15sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#fff0f0f0"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工商银行相城支行"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/bandname"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_17"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#fff0f0f0"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="622000000000000"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/userhumber"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_17"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#fff0f0f0"
                ></View>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:id="@+id/txintegral"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_17"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#fff0f0f0"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥100.00"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/txmoney"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_17"
                />
        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_70"
        >
        <Button
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_52"
            android:text="取消"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/btn_txno"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_26"
            android:background="@drawable/button_txbg"
            ></Button>
        <Button
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_52"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/btn_txok"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_26"
            android:background="@drawable/button_txbg"
            ></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>