<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    xmlns:tools="http://schemas.android.com/tools">
    <include layout="@layout/tooblar_white"/>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <TextView
            android:textColor="@color/txt_normal"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="头像"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/logo"
            android:id="@+id/iv_head"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:id="@+id/layout_yhfwxy"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textColor="@color/txt_normal"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="用户服务协议"/>
        <TextView
            android:textColor="@color/txt_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请仔细阅读查看 >"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:id="@+id/layout_ysbhsm"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textColor="@color/txt_normal"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="隐私权保护声明"/>
        <TextView
            android:textColor="@color/txt_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请仔细阅读查看 >"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
    android:id="@+id/layout_yjfk"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <TextView
        android:textColor="@color/txt_normal"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="意见反馈"/>
    <TextView
        android:textColor="@color/txt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请提出您的宝贵意见 >"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:id="@+id/layout_qchc"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textColor="@color/txt_normal"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="清除缓存"/>
        <TextView
            android:textColor="@color/txt_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/huancun_count"
            android:text="0.0M>"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_bg"/>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textColor="@color/txt_normal"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="版本号"/>
        <TextView
            android:id="@+id/tv_version_code"
            android:textColor="@color/txt_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="V3.1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_logout"
        android:text="退出登录"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_commit"/>
</LinearLayout>