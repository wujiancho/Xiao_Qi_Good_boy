<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mycommission.CashWithdrawalRebateActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_221"
        android:background="@drawable/integralquery_bg"
        >
        <View
            android:id="@+id/toobar_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/ic_back"
            android:clickable="true"
            android:layout_marginTop="@dimen/dp_35"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/toobar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="122dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/dp_35"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12344" />

        <TextView
            android:id="@+id/withdrawable_points_zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:text="2,000"
            android:textColor="#ffffffff"
            android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-------- 总积分 --------"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_124"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示：每月25日~29日可申请提现积分"
            android:textColor="#ffffffff"
            android:textSize="9sp"
            android:layout_marginTop="@dimen/dp_152"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/riqitix"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_112"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_184"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_txfy"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/withdrawal_rebate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="40000"
                android:textColor="#EB3349"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="可提现积分"
                    android:textColor="#2F2F2F"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_18"
            android:background="#BBBBBB"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_21"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/with_settlement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10,000"
                android:textColor="#2F2F2F"
                android:textSize="24sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="待结算积分?"
                    android:layout_marginTop="@dimen/dp_16"
                    android:id="@+id/yihuo"
                    android:textColor="#2F2F2F"
                    android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_259"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_305"
    android:background="@drawable/bg_txfy"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到账银行卡"
            android:textColor="#ff676767"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加银行卡"
            android:textColor="#ff2f2f2f"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/addbank_name"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_325"
        android:layout_height="0.5dp"
        android:background="#F3F3F3"
        android:layout_gravity="center"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现积分"
            android:textColor="#ff676767"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff2f2f2f"
            android:textSize="12sp"
            android:id="@+id/tx_countsr"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_36"
            android:background="@null"
            android:maxLength = "9"
            android:inputType="number"
            android:maxLines="1"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部提现"
            android:textColor="#ffeb3349"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_15"
            android:id="@+id/but_alltx"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_325"
        android:layout_height="0.5dp"
        android:background="#F3F3F3"
        android:layout_gravity="center"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="#ff676767"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ff2f2f2f"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_36"
            android:id="@+id/tx_money"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_325"
        android:layout_height="0.5dp"
        android:background="#F3F3F3"
        android:layout_gravity="center"
        ></View>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        >
<Button
    android:layout_width="@dimen/dp_85"
    android:layout_height="@dimen/dp_27"
    android:id="@+id/btt_txmoney"
    android:text="提现"
    android:textColor="#fffffefe"
    android:textSize="15sp"
    android:background="@drawable/tx_fy"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/btt_txjl"
    ></Button>

        <Button
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_27"
            android:id="@+id/btt_txjl"
            android:text="提现记录"
            android:textColor="#fffffefe"
            android:textSize="15sp"
            android:background="@drawable/tx_fy"
           app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btt_txmoney"
            ></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:id="@+id/check_tx"
            ></CheckBox>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读小麒乖乖返佣规则"
            android:textColor="#ff2f2f2f"
            android:id="@+id/fanyongguiz"
            android:textSize="12sp"
            />
    </LinearLayout>
</LinearLayout>

</RelativeLayout>