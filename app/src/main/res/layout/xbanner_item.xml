<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_160"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bgpicture"
        android:src="@drawable/btn_activate_nowbg"
        android:scaleType="fitXY"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黄金服务包"
        android:textColor="#ff70460a"
        android:textSize="19sp"
        android:id="@+id/vip_name"
        android:layout_marginTop="@dimen/dp_47"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买黄金服务包享受更高返佣、额外13项权益"
        android:textColor="#ff593605"
        android:textSize="9sp"
        android:id="@+id/vip_jurisdiction"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_24"
         android:layout_marginTop="@dimen/dp_76"
        />
    <ImageView
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_55"
        android:id="@+id/viplogo"
        android:layout_marginLeft="@dimen/dp_125"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有效期2021-12-31"
        android:textColor="#ff6f460a"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_23"
        android:id="@+id/termof_validity"
        android:layout_marginRight="@dimen/dp_9"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:text="立即购买"
        android:textColor="#ff593605"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_18"
        android:gravity="center"
        android:id="@+id/purchase"
        />

</RelativeLayout>