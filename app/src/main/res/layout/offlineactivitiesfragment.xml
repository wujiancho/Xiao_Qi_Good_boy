<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_153"
        android:src="@drawable/pic_mrgj"
        android:scaleType="fitXY"
        ></ImageView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线下活动标题"
            android:textColor="#ff303030"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_16"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020/7/14-2020/7/24"
            android:textColor="#ff656565"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_16"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="苏州"
            android:textColor="#ff656565"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_20"
            />
    </LinearLayout>
    <Button
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_31"
        android:layout_weight="1"
        android:text="我要报名"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:id="@+id/btn_baoming"
        android:background="@drawable/rb_selectbiao"
        >
    </Button>
</LinearLayout>

</LinearLayout>