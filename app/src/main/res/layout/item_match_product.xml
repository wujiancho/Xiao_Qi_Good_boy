<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:id="@+id/tv_num"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="9" />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_num"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="16dp"
            android:layout_height="8dp"
            app:layout_constraintEnd_toEndOf="@+id/image_view"
            app:layout_constraintTop_toTopOf="@+id/image_view" />

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="60dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_normal"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/image_view"
            app:layout_constraintTop_toTopOf="@+id/image_view"
            tools:text="平安商店" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_bank_name"
            app:layout_constraintStart_toStartOf="@+id/tv_bank_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_bank_name"
            tools:text="税金贷" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/gray_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_bank_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_normal"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_kded"
            app:layout_constraintStart_toStartOf="@+id/tv_kded"
            app:layout_constraintTop_toTopOf="@+id/tv_bank_name"
            tools:text="100,1000" />

        <TextView
            android:id="@+id/tv_kded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="可贷积分"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/view" />

        <TextView
            android:textSize="10sp"
            android:id="@+id/tv_rlv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textColor="@color/txt_normal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ed"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/tv_ed"
            tools:text="1234" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="参考日打折"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_kded"
            app:layout_constraintStart_toEndOf="@+id/tv_kded" />

        <ListView
            android:divider="@null"
            android:id="@+id/list_view"
            android:layout_marginLeft="8dp"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_rlv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_status"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/list_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="用信" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/gray_f0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        />
</LinearLayout>