<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mytuoke.MyTuokeActivity"
    android:orientation="vertical"
    android:background="#F0F0F0"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:background="@drawable/integralquery_bg"
            >
            <View
                android:id="@+id/toobar_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/ic_back"
                android:clickable="true"
                android:layout_marginTop="@dimen/dp_35"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/toobar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="122dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="12344" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/logo"
                android:id="@+id/circleImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/dp_64"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:id="@+id/user_nametuoke"
                android:layout_marginTop="@dimen/dp_65"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_97"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="苏州罗信网络科技有限公司"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:id="@+id/usercompany_nametuoke"
                android:layout_marginTop="@dimen/dp_88"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_97"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小麒乖乖已累计为您返佣0积分"
                android:textColor="#ffffffff"
                android:id="@+id/accumulated_pointstuoke1"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/dp_108"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_97"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_140"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_txfy"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            >
            <LinearLayout
                android:id="@+id/cash_withdrawal_rebatetuokez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cash_withdrawal_rebatetuoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ff303030"
                    android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可提积分"
                        android:textColor="#ff303030"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/dp_14"
                        />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/dp_55"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_18"
                android:background="#BBBBBB"></View>

            <LinearLayout
                android:id="@+id/this_monthcommissiontuokez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/this_monthcommissiontuoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#ff303030"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="本月积分"
                        android:textColor="#ff303030"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/dp_55"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_10"
                android:background="#BBBBBB"></View>

            <LinearLayout
                android:id="@+id/accumulated_rebatetuoketuokez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/accumulated_rebatetuoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#ff303030"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="累计拓客"
                        android:textColor="#ff303030"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_txfy"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拓客积分明细"
                android:textColor="#ff303030"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="累计拓客积分0"
                android:textColor="#ff303030"
                android:gravity="right"
                android:textSize="12sp"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/accumulated_pointstuoke"
                />
        </LinearLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:paddingTop="8dp">
            <RadioButton
                android:id="@+id/rb_this_monthtuoke"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/rb_select"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="本月"
                android:textColor="@drawable/txt_selector" />

            <RadioButton
                android:id="@+id/rb_last_monthtuoke"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/rb_select"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="上月"
                android:textColor="@drawable/txt_selector" />
            <RadioButton
                android:id="@+id/rb_alltuoke"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/rb_select"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="今年"
                android:textColor="@drawable/txt_selector" />
            <RadioButton
                android:id="@+id/rb_customizetuoke"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/rb_select"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="自定义"
                android:textColor="@drawable/txt_selector" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_select_time"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_start_timetuoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:background="@drawable/txtsoild"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="2020-2-20" />

        <View
            android:layout_width="16dp"
            android:layout_height="1dp"
            android:layout_margin="16dp"
            android:background="@color/gray_normal" />

        <TextView
            android:id="@+id/tv_end_timetuoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/txtsoild"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="2020-2-20" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_confirm_timetuoke"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/common_btn_yzm"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_recyclerviewtuoke"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_weight="1"
    android:background="@drawable/message_recyclerview_bg"
    android:layout_marginRight="7.5dp"
    android:layout_marginLeft="7.5dp"

    ></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="无数据"
        android:textColor="#ff686868"
        android:textSize="14sp"
        android:gravity="center"
        android:id="@+id/wudata"
        android:visibility="gone"
        />
</LinearLayout>