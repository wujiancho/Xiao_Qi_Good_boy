<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.integral_query.IntegralWithdrawalActivity"
    android:orientation="vertical"
    >
    <include layout="@layout/tooblar_white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:background="@drawable/integralquery_bg"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:src="@drawable/ic_p_jfcx"
            android:layout_marginTop="@dimen/dp_31"
            android:layout_marginLeft="15.5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总积分"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_31"
            android:layout_marginLeft="@dimen/dp_42"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000"
            android:textColor="#ffffffff"
            android:textSize="19sp"
            android:layout_marginTop="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_25"
            android:id="@+id/integral_count"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现积分：1,000"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_112"
            android:layout_marginLeft="@dimen/dp_16"
            android:id="@+id/integral_txke"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:id="@+id/integral_queryhistory"
            />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提现积分"
        android:textColor="#ff686868"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_15"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="right"
        android:layout_marginRight="@dimen/dp_17"
        >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入数字"
        android:textColor="#ff686868"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_15"
            android:id="@+id/srmoney"
        />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@null"
            ></EditText>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分提现金额"
            android:textColor="#ff686868"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥100.00"
            android:textColor="#ffeb3349"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="right"
            android:id="@+id/money"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_17"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff0f0f0"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写商店信息"
            android:textColor="#ff010101"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_15"
            />
    </LinearLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff686868"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_17"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/collection_accountno"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@+id/collection_accountnosr"
        />

    <EditText
        android:id="@+id/collection_accountnosr"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/collection_bg"
        android:text="1000"
        android:textColor="#ff000000"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff686868"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_17"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/beneficiary_bank"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@+id/beneficiary_banksr"
        />
    <EditText
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_36"
        android:text="1000"
        android:textColor="#ff000000"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/beneficiary_banksr"
        android:background="@drawable/collection_bg"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff686868"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_122"
        android:layout_marginLeft="@dimen/dp_17"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:id="@+id/collection_account"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@+id/collection_accountsr"
        />
    <EditText
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_36"
        android:text="1000"
        android:textColor="#ff000000"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dp_112"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/collection_accountsr"
        android:background="@drawable/collection_bg"
        ></EditText>
</androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_20"
    >
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_dui"
        android:layout_marginLeft="@dimen/dp_16"
        ></CheckBox>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读《积分提现规则》"
        android:textColor="#ff686868"
        android:textSize="14sp"
        android:id="@+id/huize"
        />
</LinearLayout>
<Button
    android:layout_width="@dimen/dp_344"
    android:layout_height="@dimen/dp_52"
    android:text="提现"
    android:textColor="#ffffffff"
    android:textSize="18sp"
    android:layout_gravity="center"
    android:id="@+id/btn_tx"
    android:layout_marginTop="@dimen/dp_30"
    android:background="@drawable/button_txbg"
    ></Button>

</LinearLayout>